extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head(pageTitle)


    .row
      .col-12
        table(class="table table-bordered" table-cart)
          thead
            tr
              th #
              th Image
              th Title
              th Price
              th Quantity
              th Total
              th Action
          tbody
        
        h5(class="text-right mb-4") Total order: <span total-price>0</span>đ

    .row
      .col-12
        +box-head("Thông tin khách hàng")

        form(form-order)
          div(class="form-group")
            label(for="fullName") Full Name
            input(
              type="text"
              class="form-control"
              id="fullName"
              name="fullName"
              required
            )
          div(class="form-group")
            label(for="phone") Phone
            input(
              type="text"
              class="form-control"
              id="phone"
              name="phone"
              required
            )
          div(class="form-group")
            label(for="note") Notes
            textarea(
              class="form-control"
              id="note"
              name="note"
              rows="2"
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-success btn-block"
            ) Book Tour